#include "threads.h"
#include <stdbool.h>

int globalSum = 1;

void PlusOne();
void MinusTwo();
void TimesThree();

int main() {
	// Initialize RunQ
	RunQ = NewItem();
	InitQueue(&RunQ);
	printf("\nRunQ Initialized...\n");
	sleep(1);

	// Start threads
	printf("Starting threads...\n\n");
	sleep(1);
	start_thread(&PlusOne);
	start_thread(&MinusTwo);
	start_thread(&TimesThree);

	// Call run() and watch
	run();

	return 0;
}

void PlusOne() {
	int localSum = 0;

	while (true) {
		globalSum += localSum;
		localSum++;
		sleep(1);

		yield();

		printf("PlusOne Function\tLocal Sum: %d\tGlobal Sum: %d\n", localSum,
				globalSum);
	}
}

void MinusTwo() {
	int localSum = 0;

	while (true) {
		globalSum += localSum;
		localSum -= 2;
		sleep(1);

		yield();

		printf("MinusTwo Function\tLocal Sum: %d\tGlobal Sum: %d\n", localSum,
				globalSum);
	}
}

void TimesThree() {
	int localSum = 1;

	while (true) {
		localSum *= 3;
		globalSum += localSum;
		sleep(1);

		yield();

		printf("TimesThree Function\tLocal Sum: %d\tGlobal Sum: %d\n\n",
				localSum, globalSum);
	}
}
